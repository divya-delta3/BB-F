<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link href="http://localhost:3000/stylesheets/doctor/home.css" type="text/css" rel="stylesheet">

        <title>Bluebird | Doctor</title>
    </head>

    <body>
        <%- include('../partials/navbar/navbar-doctor') %>

        <div class="container m-3">
            <%- include('../partials/flash') %>
        </div>

        <div class="container m-5">
            <h1>Welcome, Doc</h1>
        </div>

        <div class="container m-5">
            <!-- today appointments -->
            <div class="card" id="today-appointment-card">
                <div class="card-header" id="todayAppointmentHeader">
                    Today Appointments
                </div>

                <div class="card-body">
                    <p>Unprescribed Appointments automatically disappear after prescribed time.</p>
                    <a href="/bluebird/doctor/<%= user._id %>/todayAppointments" id="today-appointment-button" class="btn btn-outline-primary mt-2">Appointments</a>
                </div>
            </div><!-- today appointments card here -->
        </div>

        <div class="container m-5">
            <!-- prescription history -->
            <div class="card" id="appointment-history-card">
                <div class="card-header" id="appointmentHistoryHeader">
                    Prescription History
                </div>

                <div class="card-body">
                    <p>Details of all appointments.</p>
                    <a href="/bluebird/doctor/<%= user._id %>/appointmentHistory" id="appointment-history-button" class="btn btn-outline-success mt-2">Check Details</a>
                </div>
            </div><!-- prescription history ends here -->
        </div>

        <%- include('../partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script src="http://localhost:3000/javascripts/doctor/home.js"></script>

    </body>
</html>